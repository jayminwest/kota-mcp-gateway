# Server
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Health
HEALTH_PATH=/health

# Knowledge base
DATA_DIR=./data
KNOWLEDGE_BASE_PATH=./data/knowledge

# Google OAuth (Gmail + Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# If omitted, defaults to http://localhost:3000/auth/google/callback
GOOGLE_REDIRECT_URI=

# WHOOP
WHOOP_API_KEY=
WHOOP_CLIENT_ID=
WHOOP_CLIENT_SECRET=
# If omitted, defaults to http://localhost:3000/auth/whoop/callback
WHOOP_REDIRECT_URI=
# Token exchange auth method: basic or post (default tries both)
WHOOP_TOKEN_AUTH_METHOD=


# Plaid
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_PUBLIC_KEY=

# Kasa (TP-Link)
KASA_USERNAME=
KASA_PASSWORD=
KASA_LAN_ONLY=true
# Discovery window in ms for LAN (default 3000)
KASA_LAN_DISCOVERY_MS=3000

# Kraken (crypto)
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Rize (screen/time tracking)
RIZE_API_KEY=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# GitHub (for activity summaries)
GITHUB_TOKEN=
GITHUB_USERNAME=

# Stripe
# Secret API key (sk_live_... or sk_test_...)
STRIPE_API_KEY=
# Optional: Connect account ID (acct_...) if using Connect
STRIPE_ACCOUNT=
