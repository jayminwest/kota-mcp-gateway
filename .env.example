# Server
NODE_ENV=production
PORT=8081
LOG_LEVEL=info

# Health
HEALTH_PATH=/health

# Knowledge base
DATA_DIR=./data
KNOWLEDGE_BASE_PATH=./data/knowledge

# KWC
# Defaults to America/Los_Angeles (Pacific Time)
KWC_TIMEZONE=America/Los_Angeles

# Google OAuth (Gmail + Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# If omitted, defaults to http://localhost:3000/auth/google/callback
GOOGLE_REDIRECT_URI=

# WHOOP
WHOOP_API_KEY=
WHOOP_CLIENT_ID=
WHOOP_CLIENT_SECRET=
# If omitted, defaults to http://localhost:3000/auth/whoop/callback
WHOOP_REDIRECT_URI=
# Token exchange auth method: basic or post (default tries both)
WHOOP_TOKEN_AUTH_METHOD=


# Plaid
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_PUBLIC_KEY=

# Kasa (TP-Link)
KASA_USERNAME=
KASA_PASSWORD=
KASA_LAN_ONLY=true
# Discovery window in ms for LAN (default 3000)
KASA_LAN_DISCOVERY_MS=3000

# Kraken (crypto)
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Rize (screen/time tracking)
RIZE_API_KEY=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=
# Optional: direct tokens (skips OAuth file flow)
SLACK_USER_TOKEN=
SLACK_USER_ID=
SLACK_USER_SCOPE=
SLACK_USER_REFRESH_TOKEN=
# Milliseconds since epoch; omit if token does not expire
SLACK_USER_TOKEN_EXPIRES_AT=
SLACK_TEAM_ID=
SLACK_TEAM_NAME=

# Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# If omitted, defaults to http://localhost:8084/auth/spotify/callback
SPOTIFY_REDIRECT_URI=
# Optional: seed manual tokens (expires quickly)
SPOTIFY_ACCESS_TOKEN=
SPOTIFY_REFRESH_TOKEN=
# Milliseconds since epoch; optional expiry for manual token
SPOTIFY_TOKEN_EXPIRES_AT=

# GitHub (for activity summaries)
GITHUB_TOKEN=
GITHUB_USERNAME=

# Stripe
# Secret API key (sk_live_... or sk_test_...)
STRIPE_API_KEY=
# Optional: Connect account ID (acct_...) if using Connect
STRIPE_ACCOUNT=
